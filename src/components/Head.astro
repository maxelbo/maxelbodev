---
import { ClientRouter } from "astro:transitions";
import { capitalize } from "@/scripts/utils";
import SEO from "@/components/SEO.astro";
import profile from "@/data/profile.js";

const { siteData } = profile;
const { pageTitle, image, frontmatter, robots } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width" />
  <title>
    {siteData.author}{pageTitle && ` - ${capitalize(pageTitle)}`}
  </title>
  <meta name="description" content={siteData.description} />

  <!-- SEO -->
  <SEO
    siteName={siteData.siteName}  
    pageTitle={`${siteData.author} - ${pageTitle}` || `${siteData.author} | ${siteData.role}`}
    description={siteData.description}
    url={Astro.url}
    image={image?.src || siteData.image.src}
    {frontmatter}
    {robots}
  />
  <meta name="author" content={siteData.author} />
  <meta name="generator" content={Astro.generator} />
  {
    siteData.keywords && (
      <meta name="keywords" content={siteData.keywords.join(", ")} />
    )
  }

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,400;0,700;1,400;1,700&family=Zen+Kaku+Gothic+Antique&display=swap&family=Noto+Color+Emoji&display=swap"
    rel="stylesheet"
  />

  <!-- Google Tag (gtag.js) -->
  <script
    async
    type="text/partytown"
    src="https://www.googletagmanager.com/gtag/js?id=G-GE5E4YE6YL"
  ></script>
  <script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-GE5E4YE6YL");
  </script>

  <ClientRouter />
</head>
