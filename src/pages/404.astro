---
import PortfolioLayout from "@/layouts/PortfolioLayout.astro";

const pageTitle = "404";
const projectListTitle = "My Work";
---

<PortfolioLayout {pageTitle}>
  <section class="my-4 sm:mt-0 sm:mb-8">
    <h1>Sorry,</h1>
    <p class="text-lg font-bold">
      You hit a <span
        id="error-counter"
        data-from="0"
        data-to={pageTitle}
        data-speed="1"
        class="text-gray-500 dark:text-gray-300"
      >0</span>.
    </p>
    <h6 class="text-sm text-gray-500 dark:text-gray-300">
      This page doesn't exist,<br />
      but you know what does?
    </h6>
    <h1>{projectListTitle}</h1>
  </section>
</PortfolioLayout>

<script src="@/scripts/counter.js"></script>
